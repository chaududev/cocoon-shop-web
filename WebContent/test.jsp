                              <tr>
                                <td><b>Số lượng</b></td>
                                <td>
                                  <select class="qty_select" data-variant="20" disabled>
                                    <option selected="selected" value="1">1</option>
                                  </select>
                                </td>
                              </tr>
                              <tr>
                                <td><b>Giá</b></td>
                                <td>0đ</td>
                              </tr>
                              <tr>
                                <td><b>Tổng</b></td>
                                <td>0đ</td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                        <div class="clearfix"></div>
                      </div>`;

          $(document).find('.merchant-block.product-promotion').remove();
          $('.merchant-block').last().after(html);
        } else if (!json.code) {
          $(document).find('.merchant-block.product-promotion').remove();
          coupon = json.coupon.code;
          coupon_discount = json.discount;
          $('#coupon_discount').html(formatMoney(parseInt(json.discount)));
          calcTotal();
        } else {
          toastr.error(json.message);
        }
      })
    });
    function calcTotal() {
      total = parseInt(shipping_price) + parseInt(subtotal) - parseInt(coupon_discount);
      $('#total_price').html(formatMoney(total));
