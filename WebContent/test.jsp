          var image_url = '/static/img/default_image.png';
          if (json.product_image) image_url = '/uploads/' + json.product_image;

          var html = `<div class="merchant-block product-promotion" data-id="${json.variant_id}">
                        <div class="leftImage">
                          <img src="${image_url}">
                        </div>
                        <div class="product-summary">
                          <h5 class="product-name">${product_title}</h5>
