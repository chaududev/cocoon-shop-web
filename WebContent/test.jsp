                                <th class="col-price">Tổng</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>
                                <td class="col-qty">
                                  <div id="update-qty" hidden="true"></div>
                                  <select class="qty_select" style="width:90%" data-variant="20" disabled>
                                    <option selected="selected" value="1">1</option>
                                  </select>
                                </td>
