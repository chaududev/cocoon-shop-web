    function formatMoney(num) {
      if (num)
        num = num.toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1.") + 'đ';
      return num;
    }
    var subtotal = $('#shoppable_checkout_div').data('subtotal');
    var coupon;
    var coupon_discount = 0;
    var total = subtotal;
    var shipping_price = 0;
    var coupon = $('.input-coupon').val();
    $(document).on('change', 'select[name="province_id"]', function() {
      var province_id = $(this).val();
      StoreAPI.getSubRegion(province_id, function(json) {
        var option = '';
        $.each(json.data, function(i, val) {
          option += '<option value="' + val.id + '">' + val.name + '</option>';
        })
        $('select[name="subregion"]').empty();
        $('select[name="subregion"]').append(option);
        calcShipping();
      })
    });
    $(document).on('change', 'select[name="province_id"]', calcShipping);
    function calcShipping() {
      var region_id = $('select[name="province_id"]').val();
      var subregion_id = $('select[name="subregion"]').val();
      StoreAPI.getShipping(region_id, subregion_id, subtotal, function(json) {
        if (!json.code) {
          if (json.data && json.data.length) {
            if (json.data[0].price) {
              shipping_price = json.data[0].price;
              $('#shipping_price').html(formatMoney(parseInt(shipping_price)));
              calcTotal();
            }
          }
        }
      });
    }
    $('.btn-coupon').click(function(e) {
      e.preventDefault();
      var data = {};
      data.coupon = $('input[name="coupon"]').val();
      data.subtotal = subtotal;
